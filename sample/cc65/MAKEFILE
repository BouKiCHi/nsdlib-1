#==============================================================================
#	NES Sound Driver Libraly
#		Make file
#				A.Waranabe (S.W.)
#==============================================================================

.SUFFIXES :
.SUFFIXES : .s .c .mml

ASM = ca65
AFLAG = -t none

CC = cl65
CFLAG = -t none -c -o

MC = ..\..\bin\nsc
MFLAG = -a

LINKER = ld65
LFLAG = -C nesc.cfg -v -o

LIBER = ar65
LIBFLAG = a

PROJ = test

LIB_FILES = ../../lib/nsd.lib

INC_FILES = 

FILES = test.o testmus.o


clean: $(PROJ).nes
	@del *.bak
	@del *.o
	@del *.s

all: $(PROJ).nes

$(PROJ).nes : $(FILES) $(INC_FILES) $(LIB_FILES)
	@$(LINKER) $(LFLAG) $(PROJ).nes $(FILES)  $(LIB_FILES) nes.lib

.mml.o :
	@$(MC) $(MFLAG) $<
	@$(ASM) $(AFLAG) $*.s

.c.o :
	@$(CC) $(CFLAG) $*.o $<

.s.o :
	@$(ASM) $(AFLAG) $<


